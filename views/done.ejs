<% include partials/header %>

<div class="container>"
	<div class="row">
		<div class="col-sm-12 col-md-6 col-md-offset-3">
			<div>
				<h2 class="listheader">Completed tasks</h2>
			</div>
			<ul class="list-group">
				<% for(var i=0; i < done_list.length; i++){ %>
					<li class="list-group-item">
						<span> 
							<%- done_list[i].task_date.toLocaleDateString(); %>
						</span> - 
						<span class="lead"> 
							<%- done_list[i].task_name %>
						</span>

						<div class="pull-right">
							<a href="/<%= done_list[i].task_id %>/update" class="btn btn-sm btn-primary">Details</a>
						</div>
						<div class=clearfix></div>
					</li>
				<% } %>
			</ul>
			

<% include partials/footer %>