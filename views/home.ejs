					</div>
					<div class="form-group">
						<div class="btn-group" data-toggle="buttons">
							<label class="btn btn-danger btn-xs">
								<input type="radio" name="status" value="priority" autocomplete="off">Priority
							</label>
							<label class="btn btn-primary active btn-xs">
								<input type="radio" name="status" value="normal" autocomplete="off" checked>Normal
							</label>
							<label class="btn btn-primary btn-xs">
								<input type="radio" name="status" value="hold" autocomplete="off">On Hold
							</label>
							<label class="btn btn-primary btn-xs">
								<input type="radio" name="status" value="done" autocomplete="off">Done
							</label>
						</div>
						<div class="checkbox hiddencheck">
							<label><input type="checkbox" name="type" value="weekly" checked>Weekly</label>
						</div>
					</div>
					<div class="form-group">
						<button type="submit">Submit</button>
					</div>
				</form>
			</div>
			<ul class="list-group" id="weeklyToDos">
				<% for(var i=0; i < weekly_list.length; i++){ %>
					<li class="list-group-item <% if(weekly_list[i].task_status == "hold") { %> weeklyitemhold <% } %> <% if(weekly_list[i].task_status == "priority") { %> priority <% } %>">
						<div class="wrapper">	
							<div class="floatr mainbuttons">
								<a href="/<%- weekly_list[i].task_id %>/update" class="btn btn-sm btn-warning"> 
									<img class="zbutton" src="https://png.icons8.com/ios-glyphs/50/ffffff/multi-edit.png">
								</a>
								<form action='/<%= weekly_list[i].task_id %>/done?_method=PUT' method="POST" class="inline">
									<div class="checkbox hiddencheck">
										<label><input type="checkbox" name="status" value="done" checked>Done</label>
									</div>
									<button type="submit" class="btn btn-sm btn-success"><img class="zbutton" src="https://png.icons8.com/metro/32/ffffff/checkmark.png"></button>
								</form>
							</div>
							<div class="lead"> 
								<%- weekly_list[i].task_name %>
							</div>
							<div class="nextaction"> 
								<span><strong><em>Next action: </em></strong></span><%- weekly_list[i].NextAction %>
							</div>						
						<div>		
					</li>
				<% } %>
			</ul>
			<button type="btn" id="unhideWeekly">Show items on hold</button>
		</div>
	</div>
</div>

<% include partials/footer %>