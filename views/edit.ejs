<% include partials/header %>

<div> class="row">
	<div class="col-md6 col-md-offset-3">
		<p>
			<h2>Update task</h2>
		</p>
		<p>
			<h3>Last Updated: <%= update_item[0].task_date %></h3>
		</p>
		<form action='/<%= update_item[0].task_id %>/update?_method=PUT' method="POST">
			<div class="form-group">
				<label>Task Name</label>
				<input type="text" value="<%= update_item[0].task_name %>" name="name">
			</div>
			<div class="form-group notes">
				<label>Notes</label>
				<input type="text" value="<%= update_item[0].task_text %>" name="text" class="notes">
			</div>
			<div class="form-group">
				<label>Status</label>
				<input type="text" value="<%= update_item[0].task_status %>" name="status">
			</div>
			<div class="form-group">
				<label>Task Type</label>
				<input type="text" value="<%= update_item[0].task_type %>" name="type">
			</div>
			<button type="submit">Submit</button>
		</form>
	<div>
